<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%- include("partials/Bootstrap.ejs") %>
    <link rel="stylesheet"  href="css/fill.css">
    <title>Fill QCM</title>
    
</head>
<body>

    <%- include("partials/Navbar.ejs") %> 

    <h1> C'est parti ! </h1>
    <p class="descri">Retrouvez ici tous nos quiz</p>
    <div class="line"></div>    


    <% titres.forEach(titre => { %>
        <h3 class="spacing1"> <%= titre %>  </h3>
       
    


        <% data.forEach((element,index) => { %>

            <% if (element.titreQuestionnaire == titre) { %>
                <form action="/submit-qcm/<%= user._id%>/<%= element._id%>" method="post">
                <% element.questions.forEach(champ => { %>

                    <div class="spacing1">
                        <%= champ.description %>
                        <br>
                        <br>
                        <% if (champ.reponse1) { %>
                            <input type="checkbox" id="rep1" name="rep1<%= index %>"  value="cheked">
                            <label for="rep1" > <%= champ.reponse1 %> </label>
                            <br>
                        <% } %>
                    
            
                        <% if (champ.reponse2) { %>
                            <input type="checkbox" id="rep2" name="rep2" value="">
                            <label for="rep2" > <%= champ.reponse2 %> </label>
                            <br>
                        <% } %>
                    
            
                        <% if (champ.reponse3) { %>
                            <input type="checkbox" id="rep3" name="rep3" value="">
                            <label for="rep3"> <%= champ.reponse3 %> </label>
                            <br>
                        <% } %>
            
                        <% if (champ.reponse4) { %>
                            <input type="checkbox" id="rep4" name="rep4" value="">
                            <label for="rep4"> <%= champ.reponse4 %> </label>
                            <br>
                            
                        <% } %>
                        </div>


                 
                <% }) %>




             
            <% } %>
             
            
        

        <% }) %>
        <br>
        <textarea name="com" id="com" cols="80" rows="8" placeholder="N'hésitez pas à donnez votre avis"></textarea>
        <br>
        <input type="submit" value="Valider" class="confirmed">
        <div class="line"></div>


    </form>    
    <% }) %>

</body>
</html>